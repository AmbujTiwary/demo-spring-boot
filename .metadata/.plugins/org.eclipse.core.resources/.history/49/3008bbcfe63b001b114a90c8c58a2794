package com.example.demo.controllers;

import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseStatus;
import org.springframework.web.bind.annotation.RestController;

import com.example.demo.models.NumberGenerator;

@RestController
@RequestMapping("api/v1/login")
public class GeneratorController {

	
	//Receives login info from UI and validates
	@PostMapping(path= "valid", consumes = "application/json", produces = "application/json")
	@ResponseStatus(HttpStatus.OK) 
	public void validateLogin(@RequestBody NumberGenerator gen) {
		System.out.println("goal " + gen.getGoal() + "pwd " + gen.getStep());
		
	}
}
